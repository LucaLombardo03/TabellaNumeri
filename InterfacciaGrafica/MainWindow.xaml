        <TextBox Name="TxtNum2" HorizontalAlignment="Left" Height="32" Margin="493,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" FontSize="18" TextAlignment="Center"/>
        <Button Content="Calcola" HorizontalAlignment="Left" Height="41" Margin="199,194,0,0" VerticalAlignment="Top" Width="165" FontWeight="Bold" FontSize="16" Click="Calcola_Click"/>
        <Label Content="MASSIMO" HorizontalAlignment="Left" Height="28" Margin="199,259,0,0" VerticalAlignment="Top" Width="116" FontFamily="Monotype Corsiva" FontSize="20"/>
        <Label Content="MINIMO&#x9;" HorizontalAlignment="Left" Height="28" Margin="199,292,0,0" VerticalAlignment="Top" Width="116" FontFamily="Monotype Corsiva" FontSize="20"/>
        <Label Content="MEDIA" HorizontalAlignment="Left" Height="28" Margin="199,325,0,0" VerticalAlignment="Top" Width="116" FontFamily="Monotype Corsiva" FontSize="20"/>
        <Label Name="LblMassimo" Content="" HorizontalAlignment="Left" Height="28" Margin="368,259,0,0" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="LblMinimo" Content="" HorizontalAlignment="Left" Height="28" Margin="368,292,0,0" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="LblMedia" Content="" HorizontalAlignment="Left" Height="28" Margin="368,325,0,0" VerticalAlignment="Top" Width="165"/>
        <Button Content="Reset" HorizontalAlignment="Left" Height="41" Margin="425,194,0,0" VerticalAlignment="Top" Width="165" FontWeight="Bold" FontSize="16" Click="Reset_Click"/>

    </Grid>
</Window>
